<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<GridPane xmlns:fx="http://javafx.com/fxml/1" 
fx:controller="reversiapp.SettingsController" alignment="center" hgap="10" vgap="10">
	<padding><Insets top="25" right="25" bottom="10" left="25"></Insets></padding>
	 <Text text="Settings"
	 GridPane.rowIndex="0" GridPane.columnIndex="0"
	 GridPane.columnSpan="2"/>
	 
	 <Label text="Size of board (4-20):"
     GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    
     <TextField fx:id="boardSize"
     GridPane.rowIndex="0" GridPane.columnIndex="1"/
	
	 <Label text="First (X) player's color:"
	 GridPane.rowIndex="1" GridPane.columnIndex="0"/>
	
	 <TextField fx:id="playerColor"
	 GridPane.rowIndex="1" GridPane.columnIndex="1"/
	 
	<Label text="Second (O) player's color:"
     GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    
     <TextField fx:id="opponentColor"
     GridPane.rowIndex="2" GridPane.columnIndex="1"/
</GridPane>

<HBox alignment="bottom_right"
GridPane.rowIndex="4" GridPane.columnIndex="1"/>
<Button fx:id="exitBtn" text="Exit"
GridPane.rowIndex="4" GridPane.columnIndex="2"/>
</HBox>

<Text fx:id="messageText"
GridPane.rowIndex="6" GridPane.columnIndex="0"/>